<p id="notice"><%= notice %></p>

<h1>Listing Favourite Stations</h1>

<table>
  <thead>
    <tr>
      <th>Observation station</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favourite_stations.each do |favourite_station| %>
      <tr>
        <td><%= favourite_station.observation_station_id %></td>
        <td><%= favourite_station.user_id %></td>
        <td><%= link_to 'Show', favourite_station %></td>
        <td><%= link_to 'Edit', edit_favourite_station_path(favourite_station) %></td>
        <td><%= link_to 'Destroy', favourite_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

