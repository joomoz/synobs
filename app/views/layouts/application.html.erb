<!DOCTYPE html>
<html>
<head>
  <title>Synobs</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navibar">
    <%= link_to 'Observation stations', observation_stations_path %>
    <%= link_to 'Observations', observations_path %>
    <% if current_user %>
      Signed in as: <%= link_to current_user.username, current_user %>
      <%= link_to 'Add favourite station', new_favourite_station_path %>
      <%= link_to 'Sign out', signout_path, method: :delete, data: {confirm: 'Sign out?'} %>
    <% else %>
      <%= link_to 'Sign in', signin_path %>
      <%= link_to 'Sign up', signup_path %>
    <% end %>
  </div>

  <%= yield %>

</body>
</html>
