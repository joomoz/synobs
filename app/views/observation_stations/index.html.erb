<h1>Observation Stations</h1>
<h4> Number of stations: <%= @observation_stations.count %>
  <% if current_user %> <!-- and current_user.admin %> -->
    <button class="btn btn-info btn-sm">
      <%= link_to 'Update list',fetch_stations_path, method: :post %>
    </button>
  <% end %>
</h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Fmisid</th>
      <th>Wmo</th>
      <th>Name</th>
      <th>Lat</th>
      <th>Lon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @observation_stations.each do |observation_station| %>
      <tr>
        <td><%= link_to observation_station.id, observation_station %></td>
        <td><%= observation_station.wmo %></td>
        <td><%= link_to observation_station.name, observation_station %></td>
        <td><%= observation_station.lat %></td>
        <td><%= observation_station.lon %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><div class="pagination"> <%= will_paginate @observation_stations %> </div></p>
